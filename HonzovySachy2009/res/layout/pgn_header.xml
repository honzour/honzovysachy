<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView android:id="@+id/filenamestatic"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="file name:"/>
<EditText android:id="@+id/filename"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="/sdcard/game.pgn"/>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView android:id="@+id/whitestatic"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="white:"/>
<EditText android:id="@+id/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="white"/>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView android:id="@+id/blackstatic"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="black:"/>
    
<EditText android:id="@+id/black"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="black"/>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView android:id="@+id/eventstatic"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="event:"/>
<EditText android:id="@+id/event"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="event"/>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView android:id="@+id/whiteelostatic"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="white elo:"/>
<EditText android:id="@+id/whiteelo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="2000"/>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView android:id="@+id/blackelostatic"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="black elo:"/>
<EditText android:id="@+id/blackelo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="2000"/>
</LinearLayout>
<Button android:id="@+id/save"
   android:text="save"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"/>  
</LinearLayout>
</ScrollView>